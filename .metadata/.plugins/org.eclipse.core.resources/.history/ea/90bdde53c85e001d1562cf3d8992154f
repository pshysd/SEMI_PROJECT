<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

	<entry key="selectExhibitionList_P">
		SELECT *
		FROM EXHIBITION
		WHERE END_DATE &lt; SYSDATE                     <!--< 기호는 인식을 못하여 특수문자 사용 -->
	</entry>
	
	<entry key="selectExhibitionList_C">
		SELECT *
		FROM EXHIBITION
		WHERE START_DATE &lt;= SYSDATE
		     AND END_DATE &gt;= SYSDATE
	</entry>

	<entry key="selectListCount_C">
		SELECT COUNT(*) COUNT 
		FROM EXHIBITION
		WHERE START_DATE &lt;= SYSDATE 
		  AND END_DATE &gt;= SYSDATE
		  AND EX_STATUS = 'N'
	</entry>
	
	<entry key="selectExhibitionList_F">
		SELECT *
		FROM EXHIBITION
		WHERE START_DATE &gt; SYSDATE
	</entry>

	<entry key="selectListCount_P">
		SELECT COUNT(*) COUNT 
		FROM EXHIBITION
		WHERE END_DATE &lt;= SYSDATE
		  AND EX_STATUS = 'N'
	</entry>

	<entry key="selectListCount_F">
		SELECT COUNT(*) COUNT 
		FROM EXHIBITION
		WHERE START_DATE &gt;= SYSDATE 
		  AND EX_STATUS = 'N'
	</entry>
	
	<entry key="selectExhibitionList_C">
		SELECT *
		FROM (SELECT ROWNUM RNUM, A.*
			  FROM (SELECT EX_NO, LC_NAME, EX_TITLE, TO_CHAR(START_DATE, 'YYYY-MM-DD') START_DATE, TO_CHAR(END_DATE, 'YYYY-MM-DD') END_DATE, EX_THUMBNAIL
					FROM EXHIBITION
					JOIN LOCATION USING (LC_CODE)
					WHERE START_DATE &lt;= SYSDATE 
					  AND END_DATE &gt;= SYSDATE
					  AND EX_STATUS = 'N'
					ORDER BY END_DATE) A)
		WHERE RNUM BETWEEN ? AND ?
	</entry>
	
	<entry key="selectExhibitionList_P">
		SELECT *
		FROM (SELECT ROWNUM RNUM, A.*
			  FROM (SELECT EX_NO, LC_NAME, EX_TITLE, TO_CHAR(START_DATE, 'YYYY-MM-DD') START_DATE, TO_CHAR(END_DATE, 'YYYY-MM-DD') END_DATE, EX_THUMBNAIL
					FROM EXHIBITION
					JOIN LOCATION USING (LC_CODE)
					WHERE END_DATE &lt;= SYSDATE
					  AND EX_STATUS = 'N'
					ORDER BY END_DATE) A)
		WHERE RNUM BETWEEN ? AND ?
	</entry>
	
	<entry key="selectExhibitionDetail">
		SELECT *
		FROM EXHIBITION
		WHERE EX_NO = ?                
	</entry>
	
	<entry key="selectExhibitionSearch">
	SELECT *
	FROM EXHIBITION
	WHERE ARTISTS LIKE '%' || ? || '%' 
	OR EX_TITLE LIKE '%' || ? || '%'
	</entry>
	
	<entry key="insertBookmark">
	INSERT INTO BOOKMARK (MEM_NO , EX_NO)
							VALUES(?, ?)
	</entry>
	
	
	<entry key="deleteBookmark">
	DELETE
	FROM BOOKMARK
	WHERE MEM_NO = ?
				AND EX_NO = ?
	</entry>
	

	<entry key="checkExhibitionBookmarked">
	SELECT *
	FROM  BOOKMARK
	WHERE MEM_NO = ?
			AND EX_NO = ?
	</entry>

	<entry key="selectExhibitionReview">
	SELECT *
	FROM REVIEW
	WHERE EX_NO = ?         
	
	</entry>
	
	

	
	
</properties>